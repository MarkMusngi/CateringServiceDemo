<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Deflorence Catering Services</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/orderform.css">
</head>
<body class="client-body">
    <header class="text-center mb-4">
        <h1>Edit Event</h1>
    </header>
    <main>
        <div class="container">
            <div class="client-form">
                <form action="/admin/edit-event/{{event._id}}" method="POST">
                    <h2>Client Form</h2>
                    <input type="hidden" name="eventId" value="{{event._id}}">
                    <!-- Contact Information -->
                    <div class="mb-3">
                        <label for="firstName" class="form-label">First Name:</label>
                        <input type="text" id="firstName" name="firstName" class="form-control" value="{{contact.firstName}}">
                    </div>
                    <div class="mb-3">
                        <label for="lastName" class="form-label">Last Name:</label>
                        <input type="text" id="lastName" name="lastName" class="form-control" value="{{contact.lastName}}">
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone:</label>
                        <input type="text" id="phone" name="phone" class="form-control" value="{{contact.phone}}">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="text" id="email" name="email" class="form-control" value="{{contact.email}}">
                    </div>
                    <div class="mb-3">
                        <label for="facebook" class="form-label">Facebook:</label>
                        <input type="text" id="facebook" name="facebook" class="form-control" value="{{contact.facebook}}">
                    </div>

                    <h2>Order Form</h2>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="time_start" class="form-label">Time Start:</label>
                                <input type="time" id="time_start" name="time_start" class="form-control" value="{{event.time_start}}">
                            </div>
                            <div class="mb-3">
                                <label for="table_linen" class="form-label">Table Linen:</label>
                                <input type="text" id="table_linen" name="table_linen" class="form-control" value="{{event.table_linen}}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="time_end" class="form-label">Time End:</label>
                                <input type="time" id="time_end" name="time_end" class="form-control" value="{{event.time_end}}">
                            </div>
                            <div class="mb-3">
                                <label for="table_napkin" class="form-label">Table Napkin:</label>
                                <input type="text" id="table_napkin" name="table_napkin" class="form-control" value="{{event.table_napkin}}">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h3>Welcome Food</h3>
                            <div class="mb-3">
                                <input type="text" id="welcome_food1" name="welcome_food1" class="form-control" value="{{event.welcome_food1}}">
                            </div>
                            <div class="mb-3">
                                <input type="text" id="welcome_food2" name="welcome_food2" class="form-control" value="{{event.welcome_food2}}">
                            </div>
                            <div class="mb-3">
                                <input type="text" id="welcome_food3" name="welcome_food3" class="form-control" value="{{event.welcome_food3}}">
                            </div>
                            <div class="mb-3">
                                <input type="text" id="welcome_food4" name="welcome_food4" class="form-control" value="{{event.welcome_food4}}">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h3>Appetizers</h3>
                            <div class="mb-3">
                                <input type="text" id="appetizer1" name="appetizer1" class="form-control" value="{{event.appetizer1}}">
                            </div>
                            <div class="mb-3">
                                <input type="text" id="appetizer2" name="appetizer2" class="form-control" value="{{event.appetizer2}}">
                            </div>
                            <div class="mb-3">
                                <input type="text" id="appetizer3" name="appetizer3" class="form-control" value="{{event.appetizer3}}">
                            </div>
                            <div class="mb-3">
                                <input type="text" id="appetizer4" name="appetizer4" class="form-control" value="{{event.appetizer4}}">
                            </div>
                        </div>
                    </div>

                    <h3>Main Courses</h3>
                    <div class="mb-3">
                        <input type="text" id="main_course1" name="main_course1" class="form-control" value="{{event.main_course1}}">
                    </div>
                    <div class="mb-3">
                        <input type="text" id="main_course2" name="main_course2" class="form-control" value="{{event.main_course2}}">
                    </div>
                    <!-- Repeat for main_course3 to main_course7 -->

                    <h3>Desserts</h3>
                    <div class="mb-3">
                        <input type="text" id="dessert1" name="dessert1" class="form-control" value="{{event.dessert1}}">
                    </div>
                    <!-- Repeat for dessert2 to dessert4 -->

                    <h3>Drinks</h3>
                    <div class="mb-3">
                        <input type="text" id="drink1" name="drink1" class="form-control" value="{{event.drink1}}">
                    </div>
                    <!-- Repeat for drink2 to drink4 -->

                    <h3>Other Information</h3>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="others" class="form-label">Special Instructions / Others:</label>
                                <input type="text" id="others" name="others" class="form-control" value="{{event.others}}" placeholder="Enter any extra details...">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="downpayment" class="form-label">Downpayment Amount:</label>
                                <input type="number" id="downpayment" name="downpayment" class="form-control" value="{{event.downpayment}}">
                            </div>
                            <div class="mb-3">
                                <label for="balance" class="form-label">Remaining Balance:</label>
                                <input type="number" id="balance" name="balance" class="form-control" value="{{event.balance}}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="venue" class="form-label">Venue Name:</label>
                                <input type="text" id="venue" name="venue" class="form-control" value="{{event.venue}}">
                            </div>
                            <div class="mb-3">
                                <label for="address" class="form-label">Full Address:</label>
                                <input type="text" id="address" name="address" class="form-control" value="{{event.address}}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="occasion" class="form-label">Occasion Type:</label>
                                <input type="text" id="occasion" name="occasion" class="form-control" value="{{event.occasion}}">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="event_date" class="form-label">Event Date:</label>
                                <input type="date" id="event_date" name="event_date" class="form-control" value="{{event.event_date}}">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3 text-center">
                        <button type="submit" class="btn btn-primary">Save Changes</button><br><br>
                        <button type="submit" name="action" value="sendConfirmationEmail" class="btn btn-secondary" onclick="return confirmSendEmail()">Send Confirmation Email</button>
                    </div>
                    
                    <div class="text-center">
                        <a href="/admin_dashboard" class="btn btn-link">Go Back to Admin Dashboard</a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <script>
    function confirmSendEmail() {
        var status = document.getElementById('status').value;
        if (status !== 'Confirmed') {
            alert('You can only send confirmation emails when the event status is confirmed.');
            return false;
        }
        return confirm('Are you sure you want to send the confirmation email?');
    }
    </script>
</body>
</html>
